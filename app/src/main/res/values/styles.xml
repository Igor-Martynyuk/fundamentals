<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Activity.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="AppTheme.Btn.Dark" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/absolutely_light</item>
    </style>

    <style name="AppTheme.Btn.Light" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/absolutely_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

</resources>
