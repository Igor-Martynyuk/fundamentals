<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.itea.practice.fundamentals">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".FundamentalsApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".task.data.source.SourcesActivity" />

        <activity
            android:name=".start.splash.SplashActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".start.menu.MenuActivity" />
        <activity android:name=".task.components.ui.dashboard.PingDashboardActivity" />
        <activity android:name=".task.components.ui.history.PingHistoryActivity" />

        <service
            android:name=".task.components.data.service.PingService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name=".task.components.data.provider.PingHistoryProvider"
            android:authorities="com.itea.practice.fundamentals.ping.history"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>